{% extends 'base.html.twig' %}

{% block title %}Service Details{% endblock %}

{% block body %}
    <h1 class="my-4">Service Details</h1>

    <ul class="list-group">
        <li class="list-group-item"><strong>Name:</strong> {{ service.name }}</li>
        <li class="list-group-item"><strong>Cost:</strong> {{ service.cost }}</li>
        <li class="list-group-item"><strong>Duration:</strong> {{ service.duration }}</li>
    </ul>

    <div class="mt-3">
        <a href="{{ path('edit_service', {id: service.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('list_services') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}
