{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1 class="my-4">Services</h1>

    <a href="{{ path('create_service') }}" class="btn btn-primary mb-3">Create new service</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Cost</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.name }}</td>
                <td>{{ service.cost }}</td>
                <td>{{ service.duration }}</td>
                <td>
                    <a href="{{ path('get_service', {id: service.id}) }}" class="btn btn-info btn-sm">View</a>
                    <a href="{{ path('edit_service', {id: service.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    <form action="{{ path('delete_service', {id: service.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
