{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1 class="my-4">Clients</h1>

    <a href="{{ path('create_client') }}" class="btn btn-primary mb-3">Create new client</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.name }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.phone }}</td>
                <td>
                    <a href="{{ path('get_client', {id: client.id}) }}" class="btn btn-info btn-sm">View</a>
                    <a href="{{ path('edit_client', {id: client.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    <form action="{{ path('delete_client', {id: client.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
