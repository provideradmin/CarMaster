{% extends 'base.html.twig' %}

{% block title %}Редактировать {{ material.name }}{% endblock %}

{% block body %}
    <h1 class="my-4">Редактировать {{ material.name }}</h1>

    <form method="post">
        <div class="form-group">
            <label for="name">Наименование:</label>
            <input type="text" id="name" name="name" class="form-control" value="{{ material.name }}" required>
        </div>
        <div class="form-group">
            <label for="cost">Себестоимость:</label>
            <input type="number" step="0.01" id="cost" name="cost" class="form-control" value="{{ material.cost }}" required>
        </div>
        <div class="form-group">
            <label for="quantity">Количество:</label>
            <input type="number" id="quantity" name="quantity" class="form-control" value="{{ material.quantity }}" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a href="{{ path('list_materials') }}" class="btn btn-secondary">Назад к списку</a>
        </div>
    </form>
{% endblock %}
