{% extends 'base.html.twig' %}

{% block title %}{{ material.name }}{% endblock %}

{% block body %}
    <h1 class="my-4">{{ material.name }}</h1>

    <ul class="list-group">
        <li class="list-group-item"><strong>Код:</strong> {{ material.id }}</li>
        <li class="list-group-item"><strong>Наименование:</strong> {{ material.name }}</li>
        <li class="list-group-item"><strong>Стоимость:</strong> {{ material.cost }}</li>
        <li class="list-group-item"><strong>Количество:</strong> {{ material.quantity }}</li>
    </ul>

    <div class="mt-3">
        <a href="{{ path('edit_material', {id: material.id}) }}" class="btn btn-warning">Редактировать</a>
        <a href="{{ path('list_materials') }}" class="btn btn-secondary">Назад к списку</a>
    </div>
{% endblock %}
