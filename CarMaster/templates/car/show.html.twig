{% extends 'base.html.twig' %}

{% block title %}Car Details{% endblock %}

{% block body %}
    <h1 class="my-4">Car Details</h1>

    <ul class="list-group">
        <li class="list-group-item"><strong>ID:</strong> {{ car.id }}</li>
        <li class="list-group-item"><strong>Type:</strong> {{ car.type }}</li>
        <li class="list-group-item"><strong>Brand:</strong> {{ car.brand }}</li>
        <li class="list-group-item"><strong>Model:</strong> {{ car.model }}</li>
        <li class="list-group-item"><strong>Year:</strong> {{ car.year }}</li>
        <li class="list-group-item"><strong>Number:</strong> {{ car.number }}</li>
        <li class="list-group-item"><strong>Client:</strong> {{ car.client.name }}</li>
    </ul>

    <div class="mt-3">
        <a href="{{ path('edit_car', {id: car.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('list_cars') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}
